<!-- see harvester-context.xml for comments -->
<Context 
   docBase="/usr/share/masterkey/harvester-admin"
   path="/harvester-admin" 
   privileged="true" 
   allowLinking="true" 
   crossContext="true"
  >
  <Resources allowLinking="true"/>

<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
     <listener>
        <listener-class>com.indexdata.localindexes.scheduler.MainScheduler</listener-class>
    </listener>
    <servlet>
        <servlet-name>SchedulerStatusServlet</servlet-name>
        <servlet-class>com.indexdata.localindexes.scheduler.SchedulerStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SchedulerStatusServlet</servlet-name>
        <url-pattern>/SchedulerStatusServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>SchedulerStatusServlet</welcome-file>
    </welcome-file-list>
</web-app>
